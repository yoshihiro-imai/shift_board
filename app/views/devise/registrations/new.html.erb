<div class="contents row">
  <div class="container">
    <div class = "login" >新規登録</div>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label "名前" %><br />
        <%= f.text_field :name, autofocus: true,class: :form__text%>
      </div>

      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email,class: :form__text %>
      </div>

      <div class="field">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上で入力)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" ,class: :form__text%>
      </div>

      <div class="field">
        <%= f.label  "パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" ,class: :form__text%>
      </div>

      <div class="actions">
        <%= f.submit "新規登録",class: :btn_square%>
      </div>
    <% end %>
  </div>
</div>