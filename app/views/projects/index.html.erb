
<table>
  <thead>
    
    <div class="title2">シフト投稿</div>
    
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%=project.nickname %></td>  
           <% if user_signed_in? && current_user.id == project.user.id || current_user.admin? %>
        <td><%= link_to '詳細', project %></td>
        <td><%= link_to '編集', edit_project_path(project) %></td>
        <td><%= link_to '削除', project, method: :delete, data: { confirm: '削除しますか?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'シフトを登録', new_project_path ,class:"btn4"%>

